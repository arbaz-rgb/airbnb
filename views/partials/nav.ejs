<header class="bg-white border-b border-gray-200 shadow-sm text-gray-800 p-4">
  <nav class="container mx-auto flex justify-between items-center">
    <!-- LEFT SIDE LINKS -->
    <ul class="flex space-x-4 items-center">
      <li>
        <a
          href="/"
          class="<%= currentPage === 'index' ? 'bg-red-500 text-white shadow-md scale-105' : 'text-gray-800 hover:bg-red-500 hover:text-white hover:shadow-sm hover:scale-105' %> py-2 px-4 rounded-full transition-all duration-300 font-medium flex items-center space-x-2 group"
        >
          <!-- Airbnb Logo SVG -->
          <svg
            class="w-6 h-6 text-red-500 group-hover:text-white transition-colors duration-300"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path
              d="M12 0C7.58 0 4 3.58 4 8c0 5.25 8 16 8 16s8-10.75 8-16c0-4.42-3.58-8-8-8zm0 11c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3z"
            />
          </svg>
          <span
            class="font-bold text-lg group-hover:text-white transition-colors duration-300"
            >airbnb</span
          >
        </a>
      </li>

      <% if (isLoggedIn) { %>
      <li>
        <a
          href="/homes"
          class="<%= currentPage === 'Home' ? 'bg-red-500 text-white shadow-md scale-105' : 'text-gray-800 hover:bg-red-500 hover:text-white hover:shadow-sm hover:scale-105' %> py-2 px-4 rounded-full transition-all duration-300 font-medium flex items-center"
        >
          Home-List
        </a>
      </li>
      <li>
        <a
          href="/favourites"
          class="<%= currentPage === 'favourites' ? 'bg-red-500 text-white shadow-md scale-105' : 'text-gray-800 hover:bg-red-500 hover:text-white hover:shadow-sm hover:scale-105' %> py-2 px-4 rounded-full transition-all duration-300 font-medium flex items-center"
        >
          Favourites
        </a>
      </li>
      <li>
        <a
          href="/bookings"
          class="<%= currentPage === 'bookings' ? 'bg-red-500 text-white shadow-md scale-105' : 'text-gray-800 hover:bg-red-500 hover:text-white hover:shadow-sm hover:scale-105' %> py-2 px-4 rounded-full transition-all duration-300 font-medium flex items-center"
        >
          Bookings
        </a>
      </li>
      <li>
        <a
          href="/host/host-home-list"
          class="<%= currentPage === 'host-homes' ? 'bg-red-500 text-white shadow-md scale-105' : 'text-gray-800 hover:bg-red-500 hover:text-white hover:shadow-sm hover:scale-105' %> py-2 px-4 rounded-full transition-all duration-300 font-medium flex items-center"
        >
          Host Homes
        </a>
      </li>
      <li>
        <a
          href="/host/add-home"
          class="<%= currentPage === 'addHome' ? 'bg-red-500 text-white shadow-md scale-105' : 'text-gray-800 hover:bg-red-500 hover:text-white hover:shadow-sm hover:scale-105' %> py-2 px-4 rounded-full transition-all duration-300 font-medium flex items-center"
        >
          Add Home
        </a>
      </li>
      <% } %>
    </ul>

    <!-- RIGHT SIDE LINKS -->
    <% if (!isLoggedIn) { %>
    <ul class="flex space-x-4 items-center">
      <li>
        <a
          href="/auth/login"
          class="<%= currentPage === 'login' ? 'bg-red-500 text-white shadow-md scale-105' : 'text-gray-800 hover:bg-red-500 hover:text-white hover:shadow-sm hover:scale-105' %> py-2 px-4 rounded-full transition-all duration-300 font-medium flex items-center"
        >
          Login
        </a>
      </li>
      <li>
        <a
          href="/auth/signup"
          class="<%= currentPage === 'signup' ? 'bg-red-500 text-white shadow-md scale-105' : 'text-gray-800 hover:bg-red-500 hover:text-white hover:shadow-sm hover:scale-105' %> py-2 px-4 rounded-full transition-all duration-300 font-medium flex items-center border border-red-300 hover:border-red-500"
        >
          Signup
        </a>
      </li>
    </ul>
    <% } else { %>
    <ul class="flex items-center">
      <li>
        <form action="/auth/logout" method="post">
          <button
            type="submit"
            class="<%= currentPage === 'logout' ? 'bg-red-500 text-white shadow-md scale-105' : 'text-gray-800 hover:bg-red-500 hover:text-white hover:shadow-sm hover:scale-105' %> py-2 px-4 rounded-full transition-all duration-300 font-medium flex items-center border border-red-300 hover:border-red-500"
          >
            Logout
          </button>
        </form>
      </li>
    </ul>
    <% } %>
  </nav>
</header>
