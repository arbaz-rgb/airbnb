<%- include('../partials/head') %>
</head>

<body>
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-10 max-w-5xl">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden p-6 flex flex-col md:flex-col lg:flex-col xl:flex-col">

      <!-- Top section: Image + About Text -->
      <div class="flex flex-col md:flex-row gap-6">
        <!-- Image -->
        <div class="flex-shrink-0 w-40 md:w-1/3">
          <img
            src="/<%= home.photo.replace(/\\/g, '/') %>"
            alt="<%= home.houseName %>"
            class="w-full h-full object-cover rounded-lg"
          />
        </div>

        <!-- About text -->
        <div class="flex-1">
          <h2 class="text-2xl font-bold text-gray-800 mb-2"><%= home.houseName %></h2>
          <p class="text-gray-700 mb-2"><%= home.description %></p>
          <p class="text-gray-800 font-semibold mb-2"><i class="fas fa-map-marker-alt mr-1"></i> <%= home.location %></p>
          <p class="text-red-600 font-bold text-lg mb-2">â‚¹<%= home.price %> / night</p>
        </div>
      </div>

      <!-- Bottom section: Booking calendar + Button -->
      <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-4 items-center">
        <!-- Calendar (check-in/check-out) -->
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label for="checkIn" class="block text-gray-700 mb-1 font-medium">Check-In</label>
            <input type="date" name="checkIn" id="checkIn" required
              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-red-400 focus:outline-none">
          </div>

          <div>
            <label for="checkOut" class="block text-gray-700 mb-1 font-medium">Check-Out</label>
            <input type="date" name="checkOut" id="checkOut" required
              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-red-400 focus:outline-none">
          </div>
        </div>

        <!-- Booking button -->
        <div class="flex justify-end md:justify-center">
          <button type="submit"
            class="bg-red-600 text-white font-semibold py-2 px-6 rounded-lg hover:bg-red-700 focus:ring-2 focus:ring-red-500 focus:outline-none">
            Confirm Booking
          </button>
        </div>
      </div>

    </div>
  </main>
</body>
</html>
